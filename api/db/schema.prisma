datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Raider {
  id       Int    @id @default(autoincrement())
  name     String @unique
  reserves Int
}

model Raid {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  raid      Raids
}

enum Raids {
  BFD
  Gnomeregan
}
